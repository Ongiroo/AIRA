@model AIRA.UI.Models.Portfolio

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_PortfolioLayout.cshtml";
}

<h2>Edit Portfolio</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnAttribution" class="control-label"></label>
                <input asp-for="ReturnAttribution" class="form-control" />
                <span asp-validation-for="ReturnAttribution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RiskAttribution" class="control-label"></label>
                <input asp-for="RiskAttribution" class="form-control" />
                <span asp-validation-for="RiskAttribution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Sector" class="control-label"></label>
                <select asp-for="@Model.Sector" class="form-control" asp-items="Html.GetEnumSelectList<Industry>()">></select>
                <span asp-validation-for="@Model.Sector" class="text-danger"></span>                   
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

